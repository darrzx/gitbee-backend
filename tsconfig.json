{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "rootDir": "./api",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": "."
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
